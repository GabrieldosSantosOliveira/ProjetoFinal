{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["./src/app/*"],
      "@/controllers/*": ["./src/controllers/*"],
      "@/helpers/*": ["./src/helpers/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/main/*": ["./src/main/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/test/*": ["./test/*"]
    },
    "isolatedModules": true
  }
}
